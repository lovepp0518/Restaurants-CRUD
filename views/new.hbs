<script>
  function validateForm(event) {
    const form = event.target;
    const inputs = form.querySelectorAll('input');

    for (const input of inputs) {
      if (!input.value) {
        alert('尚有欄位未填寫完畢，無法送出！');
        event.preventDefault(); // 阻止表單的默認提交行為
        return;
      }
    }
  }
</script>

<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/restaurantsCRUD">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title">新增餐廳資訊</h1>

<form action="/restaurantsCRUD" method="POST" class="p-5" onsubmit="validateForm(event)">
  <div class="row mb-3">
    <label class="form-label col-2">名稱</label>
    <input type="text" class="form-control col" name="name">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">英文名稱</label>
    <input type="text" class="form-control col" name="name_en">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">類別</label>
    <input type="text" class="form-control col" name="category">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">圖片</label>
    <input type="text" class="form-control col" name="image">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">地址</label>
    <input type="text" class="form-control col" name="location">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">電話</label>
    <input type="text" class="form-control col" name="phone">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">Google map</label>
    <input type="text" class="form-control col" name="google_map">
