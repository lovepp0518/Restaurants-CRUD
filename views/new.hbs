<h1 class="mb-1 restaurant-show-title">新增餐廳資訊</h1>

<form action="/restaurantsCRUD" method="POST" class="p-5">
  <div class="row mb-3">
    <label class="form-label col-2">名稱</label>
    <input type="text" class="form-control col" name="name">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">英文名稱</label>
    <input type="text" class="form-control col" name="name_en">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">類別</label>
    <input type="text" class="form-control col" name="category">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">圖片</label>
    <input type="text" class="form-control col" name="image">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">地址</label>
    <input type="text" class="form-control col" name="location">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">電話</label>
    <input type="text" class="form-control col" name="phone">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">Google map</label>
    <input type="text" class="form-control col" name="google_map">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">評分（1~5）</label>
    <input type="number" class="form-control col" name="rating">
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">簡介</label>
    <input type="text" class="form-control col" name="description">
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>