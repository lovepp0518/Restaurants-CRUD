<h1 class="mb-1 restaurant-show-title">新增餐廳資訊</h1>

<form action="/restaurantsCRUD" method="POST" class="p-5">
  <div class="row mb-3">
    <label class="form-label col-2">名稱</label>
    <input type="text" class="form-control col" name="name" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">英文名稱</label>
    <input type="text" class="form-control col" name="name_en" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">類別</label>
    <input type="text" class="form-control col" name="category" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">圖片</label>
    <input type="text" class="form-control col" name="image" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">地址</label>
    <input type="text" class="form-control col" name="location" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">電話</label>
    <input type="text" class="form-control col" name="phone" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">Google map</label>
    <input type="text" class="form-control col" name="google_map" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">評分（1.0~5.0）</label>
    <input type="number" class="form-control col" name="rating" step="0.1" min="0" max="5" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">簡介</label>
    <input type="text" class="form-control col" name="description" required>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>