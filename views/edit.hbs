{{> message}}
<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/restaurantsCRUD">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title">編輯餐廳資訊</h1>

<form action="/restaurantsCRUD/{{restaurant.id}}/edit?_method=PUT" method="POST" class="p-5">
  <div class="row mb-3">
    <label class="form-label col-2">名稱</label>
    <input type="text" class="form-control col" name="name" value="{{restaurant.name}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">英文名稱</label>
    <input type="text" class="form-control col" name="name_en" value="{{restaurant.name_en}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">類別</label>
    <input type="text" class="form-control col" name="category" value="{{restaurant.category}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">圖片</label>
    <input type="text" class="form-control col" name="image" value="{{restaurant.image}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">地址</label>
    <input type="text" class="form-control col" name="location" value="{{restaurant.location}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">電話</label>
    <input type="text" class="form-control col" name="phone" value="{{restaurant.phone}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">Google map</label>
    <input type="text" class="form-control col" name="google_map" value="{{restaurant.google_map}}" required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">評分（0.0~5.0）</label>
    <input type="number" class="form-control col" name="rating" step="0.1" min="0" max="5" value="{{restaurant.rating}}"
      required>
  </div>
  <div class="row mb-3">
    <label class="form-label col-2">簡介</label>
    <input type="text" class="form-control col" name="description" value="{{restaurant.description}}" required>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>